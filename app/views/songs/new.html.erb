<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <%= Artist.all.each do |artist| %>
      <option value="<%= artist.name %>"></option>
    <% end %>
  </datalist><br>

  <%= f.label :genre %>
  <%= f.text_field :genre_id, list: "genre autocomplete" %>
  <datalist id="genre autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.id %>"><%= genre.name %></option>
      <% end %>
  </datalist><br>

  <%= f.label :"Song Notes" %>
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <input type="text" name="song[note_contents][]" id="song_notes_2">
  <input type="text" name="song[note_contents][]" id="song_notes_3">



  <%= f.submit %>
<% end %>
